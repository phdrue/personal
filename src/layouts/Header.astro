---
import navigation from "../utils/navigation";
import NavLink from "../components/NavLink.astro";
---

<header
  class="fixed inset-x-0 top-8 z-50 mx-auto flex w-max max-w-screen-lg flex-wrap text-sm md:flex-nowrap md:justify-start"
>
  <!-- Navigation container bg-primary_bg/70 border-2 border-yellow-500 -->
  <nav
    class="relative mx-2 flex w-full items-center justify-center rounded-full border border-stone-600/10 bg-gradient-to-r from-stone-400/10 to-stone-600/10 p-1 backdrop-blur-[6px]"
    aria-label="Global"
  >
    <div class="">
      <!-- Navigation links container -->
      <div class="flex flex-row items-center justify-end gap-x-2">
        {
          navigation.navBarLinks.map((link) => (
            <NavLink url={link.url} name={link.name} />
          ))
        }
      </div>
    </div>
  </nav>
</header>
