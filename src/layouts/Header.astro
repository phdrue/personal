---
import navigation from "../utils/navigation";
import NavLink from "../components/NavLink.astro";
---

<header
  class="max-w-screen-lg mx-auto fixed inset-x-0 top-8 z-50 flex w-max flex-wrap text-sm md:flex-nowrap md:justify-start"
>
  <!-- Navigation container bg-primary_bg/70  border-2 border-yellow-500 -->
  <nav
    class="bg-gradient-to-r from-stone-400/10 to-stone-600/10 relative mx-2 w-full rounded-full px-4 py-4 backdrop-blur-[6px] flex items-center justify-center md:px-6 lg:px-8"
    aria-label="Global"
  >
    <!-- <div class="justify-between flex items-center"> -->
      <!-- Brand logo -->
      <!-- <a
        class="flex-none rounded-lg text-xl font-bold outline-none ring-zinc-500 focus-visible:ring dark:ring-zinc-200 dark:focus:outline-none"
        href={homeUrl}
        aria-label="Brand"
      >
        <BrandLogo class="h-auto w-24" />
      </a> -->
    <!-- </div> -->
    <!-- Contains navigation links -->
    <div
      class="transition-all duration-300"
    >
      <!-- Navigation links container -->
      <div
        class="flex flex-row items-center justify-end gap-x-2"
      >
        <!-- Navigation links and Authentication component -->
        {
          navigation.navBarLinks.map((link) => (
            <NavLink url={link.url} name={link.name} />
          ))
        }
      </div>
    </div>
  </nav>
</header>
