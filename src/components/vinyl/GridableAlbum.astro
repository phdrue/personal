---
import Record from "./Record.astro";
// https://hinsto.com.au/products/small-vinyl-record-floating-display-shelf

// const albumName = "/img/albums/album10.webp";
interface Props {
  albumName: string;
}

const { albumName } = Astro.props;
---

<div
  class="group relative grid aspect-[calc(1/1)] h-[300px] grid-cols-2 grid-rows-2 gap-2 p-2"
>
  <!-- bottom left -->
  <div
    class="cut z-10 col-start-1 row-start-2 -translate-x-full translate-y-full bg-white/15 p-4 text-xs font-semibold text-white opacity-0 backdrop-blur-[5px] transition-all duration-500 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:opacity-100"
  >
    <p class="flex size-full items-end">Ava Max</p>
  </div>

  <!-- top right -->
  <div
    class="cut z-10 col-start-2 row-start-1 -translate-y-full translate-x-full bg-white/15 p-4 text-xs font-semibold text-white opacity-0 backdrop-blur-[5px] transition-all duration-500 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:opacity-100"
  >
    <div class="flex size-full flex-col justify-between items-end">
        <p class="text-5xl font-lobster">07</p>
        <p>Heaven & Hell</p>
    </div>
  </div>

  <!-- album cover -->
  <picture
    class="absolute inset-0 size-full bg-red-400 transition-all duration-500 group-hover:scale-[0.85] group-hover:brightness-[0.7] group-hover:saturate-150"
  >
    <img src={albumName} class="size-full" alt="" />
  </picture>
</div>
