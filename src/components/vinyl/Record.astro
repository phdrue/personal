---
interface Props {
  albumName: string;
}

const { albumName } = Astro.props;
---

<div
  class="bg-[repeating-radial-gradient(#000000,_#141414_3px,_#141414_3px)] z-10 col-start-1 row-start-1 grid size-[97%] grid-cols-1 grid-rows-1 place-items-center rounded-full transition-all delay-100 duration-500 will-change-transform group-hover:translate-x-[55%]"
>
<span class="col-start-1 row-start-1 size-full rounded-full bg-[conic-gradient(transparent_0%,_#ffffff1a_5%,_#ffffff33_15%,_transparent_25%);]"></span>
  <picture
    class="col-start-1 row-start-1 size-[35%] overflow-hidden rounded-full"
  >
    <img src={albumName} class="size-full" alt="" />
  </picture>
  <span class="col-start-1 row-start-1 size-[3%] rounded-full bg-white"></span>
</div>
